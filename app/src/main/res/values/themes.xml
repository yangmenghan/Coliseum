<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="BaseTheme" parent="Theme.Material3.Light.NoActionBar">
    <item name="colorPrimary">@color/supernova</item>
    <item name="colorPrimaryDark">@color/supernovaDark</item>
    <item name="colorAccent">@color/brownish</item>
    <item name="android:textColorPrimary">@color/vampireGrey</item>

    <item name="android:fitsSystemWindows">false</item>
    <item name="android:windowTranslucentNavigation">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
  </style>

  <style name="AppTheme" parent="BaseTheme">
  </style>

  <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
    <item name="colorOnSurface">@color/vampireGrey</item>
    <item name="android:backgroundDimAmount">.6</item>
    <item name="colorOnSurfaceVariant">@color/vampireGrey</item>
    <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
  </style>

</resources>
